@page
@model WebCalculationPrint.Pages.Calculations.CreateModel

@{
    ViewData["Title"] = "Создать рассчет";
}

<h1>Создать</h1>

<h4>Рассчет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Формат бумаги</label>
                <select asp-for="Calculation.FormatID" class="form-control" asp-items="ViewBag.FormatID">
                    <option value="">-- Выбор формата бумаги --</option>
                </select>
            </div>
            <div class="form-group">
                <label>Плотность бумаги</label>
                <select asp-for="Calculation.PaperID" class="form-control" asp-items="ViewBag.PaperID">
                    <option value="">-- Выбор плотности бумаги --</option>
                </select>
            </div>
            <div class="form-group">
                <label>Цветность</label>
                <select asp-for="Calculation.ColourfulnessID" class="form-control" asp-items="ViewBag.ColourfulnessID">
                    <option value="">-- Выбор красочности --</option>
                </select>
            </div>
            <div class="form-group">
                <label>Общее количество страниц</label>
                <input asp-for="Calculation.TotalPages" class="form-control" />
                <span asp-validation-for="Calculation.TotalPages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Скидка</label>
                <input asp-for="Calculation.Discount" class="form-control" asp-items="ViewBag.Discount">

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
